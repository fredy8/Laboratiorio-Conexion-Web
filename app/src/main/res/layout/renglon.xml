<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="@string/tempActualString"
            android:id="@+id/tempActualStr"
            android:textColor="#000000" />
        <TextView android:id="@+id/tempActual"
            android:textColor="#000000" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="@string/tempMaximaString"
            android:id="@+id/tempMaximaStr"
            android:textColor="#000000" />
        <TextView android:id="@+id/tempMaxima"
            android:textColor="#000000" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:text="@string/tempMinimaString"
            android:id="@+id/tempMinimaStr"
            android:textColor="#000000" />
        <TextView android:id="@+id/tempMinima"
            android:textColor="#000000" />
    </TableRow>
</TableLayout>